<Window x:Class="LayerComparer.OrderByFieldsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:local="clr-namespace:LayerComparer"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Select order by fields" Height="450" Width="800">
    <Window.Resources>
        <local:TestConverter x:Key="TestConverter"/>
    </Window.Resources>
    <StackPanel>
        <ListBox ItemsSource="{Binding LayerComparisonPairs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock>
                          <Run Text="{Binding LayerOne}"/>
                          <Run Text="&lt;=&gt;"/>
                          <Run Text="{Binding LayerTwo}"/>
                          <Run Text="{Binding SharedFields, Mode=OneWay, Converter={StaticResource TestConverter}}"/>
                        </TextBlock>
                        <ToggleButton IsEnabled="{Binding IsValidPair}" DockPanel.Dock="Right" x:Name="toggleFieldSelection">
                            <StackPanel>
                                <TextBlock Text="Change" />
                                <Popup StaysOpen="False" IsOpen="{Binding IsChecked, ElementName=toggleFieldSelection}">
                                    <ListView ItemsSource="{Binding SharedFields}" dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Selected, Mode=TwoWay}">
                                                    <TextBlock Text="{Binding Name}"/>
                                                </CheckBox>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Popup>
                            </StackPanel>
                        </ToggleButton>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
